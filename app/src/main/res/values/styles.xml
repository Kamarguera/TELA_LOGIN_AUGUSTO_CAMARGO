<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ContainerComponentsLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:background">@drawable/container_components</item>
        <item name="android:layout_margin">20dp

        </item>
        


    </style>

    <style name="ContainerComponentsCadastro">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">350dp</item>
        <item name="android:background">@drawable/container_components</item>
        <item name="android:layout_margin">20dp

        </item>



    </style>
    
    
    <style name="Edit_Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">20dp</item>
        <item name="android:maxLength">25</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>



    <style name="Box_Entregador">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_monochromatic</item>
        <item name="android:padding">20dp</item>
        <item name="android:maxLength">25</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">210dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>


    <style name="Box_Restaurante">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">20dp</item>
        <item name="android:maxLength">25</item>
        <item name="android:layout_marginLeft">210dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>



    <style name="ButtonGradient">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/entregasja_yellow</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/buttongradient_old</item>

    </style>


    <style name="ButtonMonoChromatic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/entregasja_yellow</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_monochromatic</item>

    </style>



    <style name="burlingame" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/burlingame</item>
    </style>

    <style name="jetbrains" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/jetbrainsextrabold</item>
    </style>





</resources>